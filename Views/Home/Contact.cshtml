@{
    ViewData["Title"] = "Contact Elite Health Club";
}

<style>
    .contact-hero-section {
        height: 60vh;
        background: linear-gradient(rgba(10, 10, 10, 0.8), rgba(212, 175, 55, 0.3)), url('https://images.unsplash.com/photo-1571019613454-1cb2f99b2d8b?ixlib=rb-4.0.3&auto=format&fit=crop&w=1920&q=80');
        background-size: cover;
        background-position: center;
        display: flex;
        align-items: center;
        margin-top: -80px;
    }
</style>

<!-- Hero Section -->
<section class="contact-hero-section">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-lg-8">
                <h1 class="hero-title">Get In Touch</h1>
                <p class="hero-subtitle">We're here to help you start your fitness journey</p>
            </div>
        </div>
    </div>
</section>

<!-- Contact Content -->
<section class="py-5 bg-dark">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="row">
                    <div class="col-md-6 mb-4">
                        <div class="contact-info-card">
                            <h3 class="gold-text mb-4"><i class="fas fa-map-marker-alt me-2"></i>Visit Us</h3>
                            <p>
                                <strong>Elite Health Club</strong><br>
                                Level 3 – The Spark Lifestyle Centre<br>
                                98 Cannon Avenue, Overport<br>
                                Durban, KwaZulu-Natal<br>
                                South Africa
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6 mb-4">
                        <div class="contact-info-card">
                            <h3 class="gold-text mb-4"><i class="fas fa-clock me-2"></i>Operating Hours</h3>
                            <p>
                                <strong>Monday - Thursday:</strong> 05:00 - 21:00<br>
                                <strong>Friday:</strong> 05:00 - 20:00<br>
                                <strong>Saturday:</strong> 06:00 - 16:00<br>
                                <strong>Sunday:</strong> 06:00 - 14:00<br>
                                <strong>Public Holidays:</strong> 06:00 - 14:00
                            </p>
                        </div>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-md-6 mb-4">
                        <div class="contact-info-card">
                            <h3 class="gold-text mb-4"><i class="fas fa-phone me-2"></i>Call Us</h3>
                            <p>
                                <a href="tel:+27655172764" class="text-gold">+27 65 517-2764</a><br>
                                <a href="tel:+27833936085" class="text-gold">+27 83 393-6085</a>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6 mb-4">
                        <div class="contact-info-card">
                            <h3 class="gold-text mb-4"><i class="fas fa-share-alt me-2"></i>Connect With Us</h3>
                            <div class="social-icons">
                                <a href="https://www.instagram.com/elitehealthclub/" class="text-gold me-3" target="_blank" rel="noopener noreferrer">
                                    <i class="fab fa-instagram"></i>
                                </a>
                                <a href="https://www.facebook.com/elitehp/" class="text-gold me-3" target="_blank" rel="noopener noreferrer">
                                    <i class="fab fa-facebook"></i>
                                </a>
                                <a href="https://wa.me/27655172764" class="text-gold" target="_blank" rel="noopener noreferrer">
                                    <i class="fab fa-whatsapp"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Quick Action Buttons -->
                <div class="text-center mt-5">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <a href="https://wa.me/27655172764" class="btn btn-gold btn-lg w-100" target="_blank">
                                <i class="fab fa-whatsapp me-2"></i>Chat Now
                            </a>
                        </div>
                        <div class="col-md-4 mb-3">
                            <a href="tel:+27655172764" class="btn btn-outline-gold btn-lg w-100">
                                <i class="fas fa-phone me-2"></i>Call Now
                            </a>
                        </div>
                        <div class="col-md-4 mb-3">
                            <a href="/Home/Join" class="btn btn-outline-gold btn-lg w-100">
                                <i class="fas fa-dumbbell me-2"></i>Join Now
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Map Section -->
<section class="py-5 bg-black">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2 class="section-title mb-4">Find Us</h2>
                <div class="map-placeholder">
                    <div class="map-content">
                        <i class="fas fa-map-marker-alt gold-text" style="font-size: 3rem;"></i>
                        <h4 class="gold-text mt-3">Elite Health Club</h4>
                        <p class="text-light">Level 3 – The Spark Lifestyle Centre</p>
                        <p class="text-light">98 Cannon Avenue, Overport, Durban</p>
                        <a href="https://maps.google.com/?q=Level+3+The+Spark+Lifestyle+Centre+98+Cannon+Avenue+Overport+Durban"
                           class="btn btn-gold mt-3" target="_blank">
                            <i class="fas fa-directions me-2"></i>Get Directions
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .contact-info-card {
        background: var(--darker-bg);
        padding: 2rem;
        border-radius: 10px;
        border: 1px solid rgba(212, 175, 55, 0.2);
        height: 100%;
        transition: transform 0.3s ease;
    }

        .contact-info-card:hover {
            transform: translateY(-5px);
            border-color: var(--gold);
        }

    .social-links {
        display: flex;
        flex-direction: column;
    }

    .map-placeholder {
        background: var(--darker-bg);
        border-radius: 15px;
        padding: 4rem 2rem;
        text-align: center;
        border: 2px solid rgba(212, 175, 55, 0.3);
    }

    .map-content {
        max-width: 400px;
        margin: 0 auto;
    }

    @@media (max-width: 768px) {
        .social-links .btn {
            width: 100%;
        }
    }
</style>