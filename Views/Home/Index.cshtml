@{
    ViewData["Title"] = "Elite Health Club";
}

<style>
    .membership-section {
        background: linear-gradient(rgba(5, 5, 5, 0.70), transparent), url('/images/gym-main.jpg');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
    }
</style>

<!-- Hero Section -->
<section class="py-5 bg-transparent">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-lg-8">
                <h1 class="hero-title animate-fade-in">Your Body. Your Discipline.</h1>
                <h2 class="hero-subtitle animate-fade-in-delayed">Welcome to Elite Health Club.</h2>
                <div class="mt-4">
                    <a href="/Home/Join" class="btn btn-gold btn-lg me-3">Start Your Journey</a>
                    <a href="/Home/About" class="btn btn-outline-gold btn-lg">Learn More</a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Floating Gallery & Quotes Section -->
<section class="py-5 bg-transparent">
    <div class="container">
        <div class="row align-items-center">
            <!-- 3D Cylinder Gallery Side -->
            <div class="col-lg-6 mb-4 mb-lg-0">
                <div class="cylinder-container">
                    <div class="cylinder">
                        <div class="cylinder-face cylinder-front">
                            <img src="/images/gym-equipment-1.jpg"
                                 class="cylinder-img" alt="Elite Gym Equipment">
                        </div>
                        <div class="cylinder-face cylinder-right">
                            <img src="/images/gym-training-2.jpg"
                                 class="cylinder-img" alt="Professional Training">
                        </div>
                        <div class="cylinder-face cylinder-back">
                            <img src="/images/gym-space-3.jpg"
                                 class="cylinder-img" alt="Premium Gym Space">
                        </div>
                        <div class="cylinder-face cylinder-left">
                            <img src="/images/gym-equipment-1.jpg"
                                 class="cylinder-img" alt="Elite Gym Equipment">
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quotes Side -->
            <div class="col-lg-6">
                <div class="quotes-container">
                    <div class="quote-slide active">
                        <h3 class="quote-text">"Transform your weakness into strength."</h3>
                    </div>
                    <div class="quote-slide">
                        <h3 class="quote-text">"You don't just train here — you evolve here."</h3>
                    </div>
                    <div class="quote-slide">
                        <h3 class="quote-text">"Elite isn't a name. It's a standard."</h3>
                    </div>
                    <div class="quote-slide">
                        <h3 class="quote-text">"Your limits are only the beginning."</h3>
                    </div>
                </div>
            </div>
            </div>
        </div>
    </div>
</section>

<!-- Membership Journey Section -->
<section class="py-5 bg-transparent">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-lg-10">
                <h2 class="section-title mb-5">Your Journey To Elite Starts Here</h2>

                <!-- Journey Steps -->
                <div class="journey-steps">
                    <div class="step">
                        <div class="step-circle">1</div>
                        <h4 class="step-title">Choose Your Plan</h4>
                        <p class="step-desc">Select the membership that fits your goals</p>
                    </div>

                    <div class="step-arrow">
                        <i class="fas fa-arrow-right gold-text"></i>
                    </div>

                    <div class="step">
                        <div class="step-circle">2</div>
                        <h4 class="step-title">Complete Registration</h4>
                        <p class="step-desc">Quick sign-up & payment process</p>
                    </div>

                    <div class="step-arrow">
                        <i class="fas fa-arrow-right gold-text"></i>
                    </div>

                    <div class="step">
                        <div class="step-circle">3</div>
                        <h4 class="step-title">Get Your Access</h4>
                        <p class="step-desc">Receive your membership details</p>
                    </div>

                    <div class="step-arrow">
                        <i class="fas fa-arrow-right gold-text"></i>
                    </div>

                    <div class="step">
                        <div class="step-circle">4</div>
                        <h4 class="step-title">Start Training</h4>
                        <p class="step-desc">Begin your transformation journey</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Membership Card Section -->
<section class="py-5 bg-transparent">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 text-center">
                <div class="membership-card-container">
                    <div class="elite-membership-card floating-3d">
                        <div class="card-background">
                            <div class="card-gym-image"></div>
                            <div class="card-overlay"></div>
                        </div>
                        <div class="card-content">
                            <div class="card-header">
                                <div class="card-logo">ELITE</div>
                                <div class="card-badge">PREMIUM</div>
                            </div>
                            <div class="card-body">
                                <div class="member-photo"></div>
                                <div class="member-info">
                                    <div class="member-name">YOUR NAME</div>
                                    <div class="member-type">FITNESS MEMBER</div>
                                    <div class="member-id">ID: ELITE-2024</div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <div class="valid-text">VALID AT ALL ELITE LOCATIONS</div>
                                <div class="signature-space">AUTHORIZED SIGNATURE</div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="mt-4">
                    <h3 class="gold-text">Your Elite Access Card</h3>
                    <p class="text-light">Personalized membership with premium benefits</p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Future Section Placeholder -->
<section class="py-5 bg-transparent">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-lg-8">
                <h3 class="section-title gold-text mb-4">COMING SOON</h3>
                <p class="text-light lead">Premium Training Content</p>
                <div class="placeholder-video">
                    <div class="video-placeholder-content">
                        <i class="fas fa-play-circle gold-text" style="font-size: 4rem;"></i>
                        <h4 class="gold-text mt-3">Elite Training Experience</h4>
                        <p class="text-light">Professional trainers & workout videos</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Contact Section (Keep this for quick access) -->
<section id="contact" class="py-5 bg-transparent">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-lg-8">
                <h2 class="section-title mb-4">Ready to Transform?</h2>
                <p class="lead text-light mb-4">Start your Elite journey today</p>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <a href="https://wa.me/27655172764" class="btn btn-gold btn-lg w-100" target="_blank">
                            <i class="fab fa-whatsapp me-2"></i>Chat on WhatsApp
                        </a>
                    </div>
                    <div class="col-md-6 mb-3">
                        <a href="tel:+27655172764" class="btn btn-outline-gold btn-lg w-100">
                            <i class="fas fa-phone me-2"></i>Call Now
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>