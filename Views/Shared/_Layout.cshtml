<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Elite Health Club - Your Journey to Excellence</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700;800&family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Header Navigation -->
    <partial name="_Navigation" />

    <!-- Main Content -->
    <main role="main">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer bg-dark text-gold py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="footer-logo">ELITE HEALTH CLUB</h5>
                    <p class="mb-2">More than a gym — it's a lifestyle.</p>
                    <div class="social-icons">
                        <a href="https://www.instagram.com/elitehealthclub/" class="text-gold me-3" target="_blank" rel="noopener noreferrer">
                            <i class="fab fa-instagram"></i>
                        </a>
                        <a href="https://www.facebook.com/elitehp/" class="text-gold me-3" target="_blank" rel="noopener noreferrer">
                            <i class="fab fa-facebook"></i>
                        </a>
                        <a href="https://wa.me/27655172764" class="text-gold" target="_blank" rel="noopener noreferrer">
                            <i class="fab fa-whatsapp"></i>
                        </a>
                    </div>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="mb-1"><i class="fas fa-map-marker-alt me-2"></i>Level 3 – The Spark Lifestyle Centre, 98 Cannon Avenue, Overport, Durban</p>
                    <p class="mb-1"><i class="fas fa-phone me-2"></i>+27 65 517-2764</p>
                    <p class="mb-1"><i class="fas fa-phone me-2"></i>+27 83 393-6085</p>
                    <p class="mb-0"><i class="fas fa-clock me-2"></i>Mon-Thur: 05:00-21:00 | Fri: 05:00-20:00</p>
                </div>
            </div>
            <hr class="my-3 border-gold">
            <div class="row">
                <div class="col-md-6">
                    <p class="mb-0 small">&copy; 2024 Elite Health Club. All rights reserved.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="mb-0 small">
                        <a href="/Home/Privacy" class="text-gold me-3">Privacy Policy</a>
                        <a href="/Home/Terms" class="text-gold me-3">Terms of Service</a>
                        <span class="text-muted">Site by www.ThingsDoneImmediately.com</span>
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>